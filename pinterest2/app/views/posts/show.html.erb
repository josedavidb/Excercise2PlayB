
<h1 class="text-center">Crea una nuevo Post</h1>

<h2><%= @new_post.title%> </h2> 

<p><%= @new_post.body %></p>
<%=image_tag @new_post.image.url(:medium)%>
<p>Escrito por: </p>
<p><%= @new_post.user.email%></p>
<%=link_to "Editar", edit_post_path%>
<%=link_to "Eliminar", post_path, method: :delete%>
